{% comment %}
  A configurable hero banner section with a title, subtitle, and call-to-action button.
{% endcomment %}

{%- liquid
  assign bg_image = section.settings.header_image
  assign logo_image = section.settings.logo
  assign hero_collection = section.settings.hero_collection

  if hero_collection
    assign hero_link = hero_collection.url
  else 
    assign hero_link = routes.all_products_collection_url
  endif
-%}
<div
  class="phenex-hero"
    style="background-image: url({{ 'headerimage1.png' | asset_url }});"
>
  <div class="overlay"></div>

  <div class="hero-inner">
    <div class="hero-left">
        <img
          src="{{ 'logowhite.png' | asset_url  }}"
          width="80"
          height="80"
          class="hero-logo"
          loading="lazy"
        >
        <h1 class="hero-title">{{ section.settings.title | escape }}</h1>
        <p class="hero-subtitle">{{ section.settings.subtitle | escape }}</p>

        <a
          href="{{ hero_link }}"
          class="hero-btn"
        >
          {{ section.settings.button_label | escape }}
        </a>
    </div>
  </div>
</div>

{% stylesheet %}
.phenex-hero {
  position: relative;
  min-height: 100vh;           /* Hauteur pleine page, fixe */
  height: 100vh;                /* Alternative si vous voulez une hauteur exacte */
  background-size: cover;
  background-position: center; /* ou 'center center' pour un centrage parfait */
  background-repeat: no-repeat;
  display: flex;
  align-items: flex-start;      /* Colle le contenu en haut */
  justify-content: flex-start;  /* Alignement à gauche */
  padding: 10vh 8% 0;           /* Espace en haut : 10% de la hauteur de l'écran */
  overflow: hidden;
  margin: 0;
  width: 100vw;
margin-left: calc(-50vw + 50%);
}


.overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.3); /* noir à 30% d'opacité, plus léger */
  z-index: 1;
}

.hero-inner {
  position: relative;
  z-index: 2;
  width: 100%;
  max-width: 1200px;
}



.hero-logo {
  width: 33%;
  height: auto;
}

.hero-left {
  max-width: 600px;
  margin-top: 5vh; /* si besoin d'un réglage fin */
}

.hero-title {
  font-size: clamp(2.5rem, 6vw, 5rem);
  line-height: 1.2;
  word-break: break-word;
}

.hero-subtitle {
  font-size: clamp(1rem, 2.5vw, 1.2rem);
  margin: 2vh 0;
}

.hero-btn {
  display: inline-block;
  padding: 14px 40px;
  background-color: #b87333;
  color: #fff;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
  letter-spacing: 1px;
}

.hero-btn:hover {
  background-color: #d18b47;
  transform: translateY(-3px);
}

@media (max-width: 768px) {
  @media (max-width: 768px) {
  .phenex-hero {
    padding: 5vh 5% 0; /* moins d'espace en haut sur mobile */
    background-position: center;
    text-align: center;
  }

  .hero-left {
    margin: 0 auto;
  }

  .hero-logo {
    margin: 0 auto 2vh auto;
    width: 50%; /* logo plus gros si nécessaire */
  }
}
}
{% endstylesheet %}

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "header_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "PHENEX"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Streetwear meets modern minimalism."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Collection"
    },
    {
      "type": "collection",
      "id": "hero_collection",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
