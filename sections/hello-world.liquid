{% comment %}
  A configurable hero banner section with a title, subtitle, and call-to-action button.
  assign bg_image = section.settings.header_image

  {% endcomment %}

{%- liquid
  assign logo_image = section.settings.logo
  assign hero_collection = section.settings.hero_collection

  if hero_collection
    assign hero_link = hero_collection.url
  else
    assign hero_link = routes.all_products_collection_url
  endif
-%}
<div
  class="phenex-hero"
    style="background-image: url('{{ 'header_image.png' | asset_url }}');"
>
  <div class="overlay"></div>

  <div class="hero-inner">
    <div class="hero-left">
        <img
          src="{{ logo_image | image_url: width: 160 }}"
          alt="{{ logo_image.alt | default: shop.name | escape }}"
          width="80"
          height="{{ 80 | divided_by: logo_image.aspect_ratio | round }}"
          class="hero-logo"
          loading="lazy"
        >
        <h1 class="hero-title">{{ section.settings.title | escape }}</h1>
        <p class="hero-subtitle">{{ section.settings.subtitle | escape }}</p>

        <a
          href="{{ hero_link }}"
          class="hero-btn"
        >
          {{ section.settings.button_label | escape }}
        </a>
    </div>
  </div>
</div>

{% stylesheet %}
.phenex-hero {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background-size: cover;
  background-position: center right;
  display: flex;
  align-items: center;
  padding: 0 8%;
  overflow: hidden;
}

.overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to bottom,
    rgba(0,0,0,0.75) 0%,
    rgba(0,0,0,0.5) 40%,
    rgba(0,0,0,0.85) 100%
  );
  z-index: 1;
}

.hero-inner {
  position: relative;
  z-index: 2;
  width: 100%;
  max-width: 1200px;
}

.hero-left {
  max-width: 600px;
}

.hero-logo {
  width: 80px;
  height: auto;
  margin-bottom: 30px;
}

.hero-title {
  font-size: clamp(2.5rem, 6vw, 5rem);
  font-weight: 800;
  letter-spacing: 6px;
  color: #ffffff;
}

.hero-subtitle {
  margin: 25px 0;
  font-size: 1.2rem;
  color: #cccccc;
  line-height: 1.6;
}

.hero-btn {
  display: inline-block;
  padding: 14px 40px;
  background-color: #b87333;
  color: #fff;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
  letter-spacing: 1px;
}

.hero-btn:hover {
  background-color: #d18b47;
  transform: translateY(-3px);
}

@media (max-width: 768px) {
  .phenex-hero {
    padding: 0 5%;
    background-position: center;
    text-align: center;
  }

  .hero-left {
    margin: auto;
  }

  .hero-logo {
    margin: 0 auto 20px auto;
  }
}
{% endstylesheet %}

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "header_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "PHENEX"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Streetwear meets modern minimalism."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Collection"
    },
    {
      "type": "collection",
      "id": "hero_collection",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
