{%- comment -%}
  Renders the content for a standard page (e.g., About Us).
{%- endcomment -%}

{{ 'page.css' | asset_url | stylesheet_tag }}

<div class="page-container page-width">
  <header class="page-header">
    <h1>{{ page.title }}</h1>
  </header>
  <div class="page-content rte">
    {{ page.content }}
  </div>
</div>

{% schema %}
{
  "name": "Page",
  "settings": []
}
{% endschema %}
