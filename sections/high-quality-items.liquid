{{ 'high-quality-items.css' | asset_url | stylesheet_tag }}

<div class="high-quality-items section-{{ section.id }}">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="high-quality-items__title">{{ section.settings.title | escape }}</h2>
    {% endif %}

    <div class="high-quality-items__grid">
      {% for block in section.blocks %}
        <div class="high-quality-items__item" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <div class="high-quality-items__icon">
              <img
                src="{{ block.settings.icon | image_url: width: 80 }}"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
                width="80"
                height="{{ 80 | divided_by: block.settings.icon.aspect_ratio | round }}"
              >
            </div>
          {% endif %}
          <h3 class="high-quality-items__item-title">{{ block.settings.title | escape }}</h3>
          <p class="high-quality-items__item-description">{{ block.settings.description | escape }}</p>
        </div>
      {% else %}
        {% comment %} Placeholders lorsque aucun bloc n'est cr√©√© (√©diteur) {% endcomment %}
        {% for i in (1..3) %}
          <div class="high-quality-items__item high-quality-items__item--placeholder">
            <div class="high-quality-items__icon placeholder" aria-hidden="true">üñºÔ∏è</div>
            <h3 class="high-quality-items__item-title">{{ 'sections.high_quality_items.placeholder_title' | t: number: i }}</h3>
            <p class="high-quality-items__item-description">{{ 'sections.high_quality_items.placeholder_description' | t }}</p>
          </div>
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "High Quality Items",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section heading (optional)",
      "info": "Leave empty to hide the section title"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon (optional)",
          "info": "Recommended size: 80x80 px"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "High Quality Items"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "We are committed to delivering outstanding quality in every detail, meeting your diverse needs."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "High Quality Items",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "High Quality Items",
            "description": "We are committed to delivering outstanding quality in every detail, meeting your diverse needs."
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Materials Tested",
            "description": "Products that undergo rigorous testing to ensure their exceptional, durability and reliability."
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Support Online",
            "description": "We support customers 24/7, send questions we will solve for you immediately."
          }
        }
      ]
    }
  ]
}
{% endschema %}
