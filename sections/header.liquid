<header>
  <h2 class="header__title">
    {{ shop.name | link_to: routes.root_url }}
  </h2>

  <div class="header__menu">
    {% for link in section.settings.menu.links %}
      {{ link.title | link_to: link.url }}
    {% endfor %}
    <div class="nav">
    <ul class="nav">
      <li><a href="">home</a></li>
      <li><a href="">about</a></li>
      <li><a href="">contact</a></li>
      <li><a href="">faq</a></li>
    </ul>
  </div>
  </div>

  <div class="header__icons">
    <div class="header-search-toggle" aria-hidden="false">
      {# Button that toggles the search input #}
      <button class="header-search-button" id="header-search-open" aria-label="Ouvrir la recherche">
        {# Magnifier SVG icon #}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path d="M11 4a7 7 0 1 0 0 14 7 7 0 0 0 0-14zm8 15-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
        </svg>
      </button>

      {# Search form (GET) - restricted to products by hidden input name="type" value="product" #}
      <form class="header-search-form" id="header-search-form" action="{{ routes.search_url }}" method="get" role="search" aria-label="Recherche de produit">
        {# Restrict results to products only #}
        <input type="hidden" name="type" value="product" />

        {# q is Shopify's query parameter for search term #}
        <label for="header-search-input" class="visually-hidden">Rechercher un produit</label>
        <input id="header-search-input" class="header-search-input" type="search" name="q" placeholder="Rechercher un produit..." aria-label="Rechercher un produit" autocomplete="off" />

        <button type="submit" class="header-search-submit" aria-label="Lancer la recherche">
          {# Small arrow icon for submit button #}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M5 12h14M12 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </form>
    </div>
    {# End Search icon and form #}

    {% if shop.customer_accounts_enabled %}
      {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
    {% endif %}

    <a href="{{ routes.cart_url }}">
      {% if cart.item_count > 0 %}
        <sup>{{ cart.item_count }}</sup>
      {% endif %}

      {{ 'icon-cart.svg' | inline_asset_content }}
    </a>
  </div>
</header>

{% stylesheet %}
  header {
    height: 5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  header a {
    position: relative;
    text-decoration: none;
    color: var(--color-foreground);
  }
  header a sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
  }
  header svg {
    width: 2rem;
  }
  header .header__menu,
  header .header__icons {
    display: flex;
    gap: 1rem;
  }

  /* Styles for the search toggle functionality */
  .header-search-toggle { display: inline-flex; align-items: center; gap: .5rem; }
  .header-search-button {
    background: transparent;
    border: 0;
    cursor: pointer;
    padding: 6px;
    display: inline-flex;
    align-items:center;
  }
  .header-search-form {
    position: relative;
    display: inline-block;
    overflow: hidden; /* Important for hiding submit button during input animation */
  }
  .header-search-input {
    display: none; /* Initially hidden by default */
    max-width: 0; /* Starts collapsed for animation */
    padding: 6px 30px 6px 10px; /* Full padding when visible */
    border: 1px solid #ddd;
    border-radius: 4px;
    transition: max-width 0.3s ease-out, padding 0.3s ease-out, border 0.3s ease-out; /* Smooth animation */
    overflow: hidden; /* Hides content outside max-width */
    white-space: nowrap; /* Prevents text wrapping during animation */
    box-sizing: border-box; /* Include padding and border in width calculation */
  }
  .header-search-input.visible {
    display: inline-block; /* Makes it visible */
    max-width: 250px; /* Expands to its full width */
    width: 250px; /* Explicit width when fully expanded */
    padding: 6px 30px 6px 10px; /* Ensures correct padding when visible */
  }
  .header-search-submit {
    position: absolute;
    right: 2px; /* Default position when input is visible */
    top: 2px;
    bottom: 2px;
    border: 0;
    background: transparent;
    cursor: pointer;
    padding: 4px;
    transition: right 0.3s ease-out, opacity 0.3s ease-out, visibility 0.3s; /* Animate button movement/visibility */
  }
  /* Position and hide submit button when input is collapsed */
  .header-search-input:not(.visible) + .header-search-submit {
    right: -30px; /* Moves off-screen to the right, hidden by .header-search-form overflow */
    opacity: 0;
    visibility: hidden;
  }

  /* Responsive adjustment for smaller screens */
  @media (max-width: 600px) {
    .header-search-input.visible {
      max-width: 140px; /* Smaller width on mobile */
      width: 140px;
    }
  }
{% endstylesheet %}


{% javascript %}
(function() {
  var openBtn = document.getElementById('header-search-open');
  var form = document.getElementById('header-search-form');
  var input = document.getElementById('header-search-input');

  // Helper functions to show/hide search input
  function showSearch() {
    input.classList.add('visible');
    input.focus();
    openBtn.setAttribute('aria-expanded', 'true');
  }

  function hideSearch() {
    input.classList.remove('visible');
    openBtn.setAttribute('aria-expanded', 'false');
  }

  // Toggle search visibility when icon is clicked
  openBtn.addEventListener('click', function(e) {
    e.preventDefault();
    if (input.classList.contains('visible')) {
      hideSearch();
    } else {
      showSearch();
    }
  });

  // Hide search on Escape key press
  input.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      hideSearch();
    }
  });

  // Close search if user clicks outside the search form or button
  document.addEventListener('click', function(e) {
    if (!form.contains(e.target) && !openBtn.contains(e.target)) {
      hideSearch();
    }
  });

  // Prevent form submission if the search input is empty
  form.addEventListener('submit', function(e) {
    var val = input.value.trim();
    if (!val) {
      e.preventDefault(); // Stop form from submitting
      hideSearch(); // Optionally hide the search if empty
    }
  });
})();
{% endjavascript %}

